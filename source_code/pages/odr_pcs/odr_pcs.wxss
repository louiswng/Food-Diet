.top{
    display: flex;
    flex-direction: row-reverse;
    padding: 30rpx 30rpx;
    font-size: 32rpx;
    color: gray;
    border-bottom: 1px solid lightgray;
}
.header-name{
    display: flex;
    justify-content: center;
    margin-bottom: 10rpx;
    font-weight: bold;
}
.header-name-icon{
    height: 50rpx;
    width: 50rpx;
    margin-right: 20rpx;
}
.header-title{
    font-size: 32rpx;
    display: flex;
    justify-content: center;
}
.header-time{
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    color: orange;
}
.addr-confirm{
    font-size: 42rpx;
    font-weight: bold;
    margin: 10rpx 0 30rpx 130rpx;
}
.addr-send{
    display: flex;
    padding: 50rpx 0;
    margin: 0 50rpx;
    border-bottom: 1px solid lightgray;
}
.addr-icon{
    height: 80rpx;
    width: 80rpx;
    margin: 0 50rpx;
}
.food-detail{
    display: flex;
    justify-content: center;
    margin: 20rpx 0;
    font-size: 32rpx;
}
.btn{
    height: 100rpx;
    width: 200rpx;
    background-color: orange;
    color: white;
    border-radius: 100rpx;
}